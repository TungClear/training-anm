; This file is for unifying the coding style for different editors and IDEs.
; More information at http://editorconfig.org

root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.js]
indent_style = space
indent_size = 2
end_of_line = lf

[*.php]
indent_style = space
trim_trailing_whitespace = true
indent_size = 4
end_of_line = lf

[Dockerfile]
indent_style = space
indent_size = 2
end_of_line = lf

[*.sh]
indent_style = space
indent_size = 2
end_of_line = lf

[*.{py,rst,txt}]
indent_style = space
trim_trailing_whitespace = true
indent_size = 4
end_of_line = LF

[*.yml]
indent_style = space
indent_size = 2
end_of_line = LF
